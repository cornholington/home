! 
! DEFAULT system.mwmrc FOR Mwm
! 


! ----------- root menu description

Menu DefaultRootMenu
{
	"All Windows"		f.title
	 no-label		f.separator
	"Shuffle Up"		f.circle_up
	"Shuffle Down"		f.circle_down
	"Refresh"		f.refresh
	no-label		f.separator
	"Applications"		f.menu "Apps"
	"Telnet/Rlog"		f.menu "Telnet"
	no-label		f.separator
	"Logout"		f.exec " "
}


! -----------   window menu description.
Menu DefaultWindowMenu  
{
!the keystroke accelerators apply to the window with the focus
!regardless of where the mouse cursor is
	"This Window"		f.title
	 no-label			f.separator
	"Move"		_M	Meta<Key>F1	f.move
	"Size"		_S	Meta<Key>F2	f.resize
	"Minimize"	_i	Meta<Key>F3	f.minimize
	"Normalize"	_N	Meta<Key>F4	f.normalize
	"Maximize"	_a	Meta<key>F5	f.maximize
	"Lower"		_L	Meta<Key>F6	f.lower
	"Raise"		_R	Meta<Key>F7	f.raise
	no-label				f.separator
	"Close"		_C			f.kill
}

! -----------  Applications menu description
Menu Apps
{
	"Applications"		f.title
	no-label		f.separator
	"Elm"		_E	f.exec "xterm -geometry 80x72 -T xelm -n xelm -e elm &" 
	"Gnu-emacs" 	_G	f.exec "emacs &"
	"Xterm"		_X	f.exec "xterm -ls &"
	"Calculator"    _c      f.exec "xcalc &"
	"Clock"		_k	f.exec "xclock &"
	"Xload"		_o	f.exec "xload &"
	"Mosaic"        _M      f.exec "mosaic &"
	no-label		f.separator
	"Restart WM"		f.restart
}



! -----------    Telnet menu description
Menu Telnet
{
	"Telnet/Rlog"		f.title
	no-label		f.separator
	"Hobbes"		f.exec "xterm -n hobbes -T hobbes -e rlogin hobbes &"
	"Oregon343"		f.exec "xterm -n pdx343 -T pdx343 -e rlogin pdx343 -l jsicolo &"
	"Oregon344"		f.exec "xterm -n pdx344 -T pdx344 -e rlogin pdx344 -l jsicolo &"
	"Oregon345"		f.exec "xterm -n pdx345 -T pdx345 -e rlogin pdx345 -l jsicolo &"
	
	no-label		f.separator
	"Other"		_O	f.exec "xtn &"
}


! -----------    button binding description 
Buttons MyButtons
{
	<Btn1Down>	root	f.menu "Apps"
	<Btn2Down>	root	f.menu "Telnet"
	<Btn3Down>	root	f.menu "DefaultRootMenu"
!these next buttons apply to the window with the mouse cursor
! even if the focus is elsewhere
	<Btn1Down>	frame		f.raise
	Meta<Btn1Down>	window|frame|icon	f.raise
	Meta<Btn2Down>	window|frame|icon	f.lower
	Meta<Btn3Down>	window		f.post_wmenu
}

 
! -----------   key binding descriptions
Keys MyBindings
{
! post_wmenu doesn't work for icons when they're boxed,
! the keystroke goes to the icon box window, not any icon

	Meta<Key>Tab       		root|icon|window        f.prev_key
	Meta Shift<Key>Tab		root|icon|window        f.next_key

	Shift<Key>Escape	window|frame	f.post_wmenu
	Meta<Key>space		icon f.post_wmenu
	Meta Ctrl Shift<Key>exclam	root|icon|window        f.set_behavior


! Mnemonics from menus
	Meta Shift <Key>e	root|window  f.exec "xterm -geometry 80x72 -T xelm -n xelm -e elm &" 
	Meta Shift <Key>x	root|window  f.exec "xterm -ls"
	Meta Shift <Key>g	root|window  f.exec "emacs19"
	Meta Shift <Key>o	root|window  f.exec "xload"
 	Meta Shift <Key>k	root|window  f.exec "xclock"
 	Meta Shift <Key>c	root|window  f.exec "xcalc"
 	Meta Shift <Key>m	root|window  f.exec "mosaic &"
 }
